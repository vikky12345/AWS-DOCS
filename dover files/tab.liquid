<div class="container">
  <div>
    <h2 class="home-side-bar">{{ section.settings.heading }}</h2>
  </div>
  <div class="homeSideMenu">
    {% for block in section.blocks %}
      <div class="home-menu">
        <a href="{{ block.settings.link }}">{{ block.settings.text }}</a>
      </div>
    {% endfor %}
  </div>
</div>
{% schema %}
  {
    "name": "Home Side Bar ",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      }
    ],
    "blocks": [
      {
        "name": "Link",
        "type": "text",
        "settings": [
          {
            "type": "text",
            "id": "text",
            "label": "Enter Text"
          },
          {
            "type": "text",
            "id": "link",
            "label": "Enter Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Side Menu Bar",
        "category": "Side Menu"
      }
    ]
  }
{% endschema %}

